################################################################################ 
#-------------------------------------------------------------------------------
CC = gcc
CFLAGS = -Wall -std=gnu99
#
PROG = ncg
SRCS = main.c client.c server.c

#-------------------------------------------------------------------------------
# Use file name for .o
OBJS = $(SRCS:.c=.o)

#-------------------------------------------------------------------------------
# Target
$(PROG) : $(OBJS)
	$(CC) $(CFLAG) $(OBJS) -o $(PROG)

#-------------------------------------------------------------------------------
# Dependency
main.o: main.h client.h server.h
client.o: client.h
server.o: server.h

#-------------------------------------------------------------------------------
# Utility
clean:
	/bin/rm -f core *~ $(OBJS) 

full-clean:
	/bin/rm -f core *~ $(OBJS) $(PROG)
